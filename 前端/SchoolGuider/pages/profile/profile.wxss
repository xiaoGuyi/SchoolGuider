/* pages/introduce/introduce.wxss */
.bar{
  background-color: #00b7f3;
  height:160rpx;
  z-index:0;
}
.background{
  z-index:-1;
  background-color: #f2f2f2;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.contain{
  z-index:1;
  top:-50rpx;
  position:relative;
  background-color: #ffffff;
  border-radius: 12px;
  border: solid 1px #5cdbd4;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: visible;
}

/**index.wxss**/
.userinfo-avatar {
  position:relative;
  top:-70rpx;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  position:relative;
  top:-70rpx;
  color: #aaa;
}
.option{
  height:85rpx;
  z-index:1;
  top:0rpx;
  position:relative;
  background-color: #ffffff;
  border-radius: 12px;
  border: solid 1px #cccecd;
}

.act-wrapper {
  margin-bottom: 1.75rem;
}
.act-wrapper .act-item {
  display: flex;
  align-items: center;
  height: 85rpx;
  padding: 0 1.125rem;
  border-bottom: 2rpx solid #e7e7e7;
  background-color: #fff;
}

.bili-icon-history-2 image{
  background-position: -130rpx -412rpx;
  width: 50rpx;
  height: 50rpx;
}
.act-wrapper .act-item .act-name {
  flex: 1;
  padding-left: 30rpx;
  color: #444;
  font-size: 36rpx;
  display: block;
  font-weight: 600;
}
.act-tooltip {
  width: 100%;
  text-align: center;
  display: inline-block;
  color: #999;
  font-size: 30rpx;
  margin: 0 auto;
  padding: 0.625rem 0;
}
